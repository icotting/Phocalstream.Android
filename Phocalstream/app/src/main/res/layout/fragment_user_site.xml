<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.plattebasintimelapse.phocalstream.fragments.UserSiteFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:id="@+id/user_site_image"
        android:scaleType="centerCrop"
        android:src="@drawable/winter_park_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/site_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="8dip"
            android:layout_marginRight="16dip"
            android:layout_marginBottom="4dip"
            android:textColor="@color/material_deep_teal_500"
            android:text="Camera Site Name"
            android:textSize="@dimen/abc_text_size_large_material" />

        <TextView
            android:id="@+id/site_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="4dip"
            android:layout_marginRight="16dip"
            android:layout_marginBottom="8dip"
            android:textColor="@color/primary_material_light"
            android:text="XX Photos From Blank to Blank" />
    </LinearLayout>

</RelativeLayout>
